<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".TripOverviewAdapterItem">

    <ImageView
        android:id="@+id/tripOverviewAdapterItemImage"
        android:src="@drawable/sedan"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <LinearLayout
        android:id="@+id/tripOverviewAdapterItemTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tripOverviewAdapterItemDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Boston to Rome"/>
        <TextView
            android:id="@+id/tripOverviewAdapterItemDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Jan 25 - 30, 2020"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/delete_trip_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/trash"/>

</LinearLayout>